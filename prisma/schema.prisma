generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- Enum untuk Pilihan Terbatas ---

// Enum Tipe Bodi Mobil
enum BodyType {
  HATCHBACK
  SEDAN
  MPV
  SUV
  LUXURY
  MINIBUS
}

// Enum Tipe Transmisi
enum TransmissionType {
  MANUAL
  AUTOMATIC
}

// Enum Status Artikel
enum ArticleStatus {
  DRAFT
  PUBLISHED
}

// --- Skema Data Utama ---

// Tabel Mobil (Car)
model Car {
  id            String            @id @default(uuid())
  carName       String
  slug          String            @unique
  bodyType      BodyType
  transmission  TransmissionType  
  seats         Int?
  bags          Int?
  description   String?
  imageUrl      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  prices        RentalPrice[]
  testimonials  Testimonial[]
}

// Tabel Harga Sewa (RentalPrice)
model RentalPrice {
  id            String  @id @default(uuid())
  carId         String
  car           Car     @relation(fields: [carId], references: [id])
  pricePerDay   Int
  pricePerWeek  Int?
  pricePerMonth Int?
  description   String?
}

// Tabel Testimonial
model Testimonial {
  id            String    @id @default(uuid())
  carId         String
  car           Car     @relation(fields: [carId], references: [id])
  customerName  String
  reviewContent String
  date          DateTime  @default(now())
  rating        Int
}

