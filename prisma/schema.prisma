generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Car {
  id           String           @id @default(uuid())
  carName      String
  slug         String           @unique
  bodyType     BodyType
  transmission TransmissionType
  seats        Int?
  bags         Int?
  description  String?
  imageUrl     String
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  prices       RentalPrice[]
  testimonials Testimonial[]
}

model RentalPrice {
  id            String  @id @default(uuid())
  carId         String
  pricePerDay   Int
  pricePerWeek  Int?
  pricePerMonth Int?
  description   String?
  car           Car     @relation(fields: [carId], references: [id])
}

model Testimonial {
  id            String   @id @default(uuid())
  carId         String
  customerName  String
  reviewContent String
  date          DateTime @default(now())
  rating        Int
  car           Car      @relation(fields: [carId], references: [id])
}

enum BodyType {
  HATCHBACK
  SEDAN
  MPV
  SUV
  LUXURY
  MINIBUS
}

enum TransmissionType {
  MANUAL
  AUTOMATIC
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
}
